<Window x:Class="PersonToJson.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        Title="MainWindow" 
        
        Height="675" Width="850">
    <Window.Resources>
        <ResourceDictionary Source="Styles.xaml"/>
    </Window.Resources>
    
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Персональная информация"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="Фамилия"
                   Target="Input_LastName"
                   Style="{StaticResource Style_Label}"/>
            <TextBox x:Name="Input_LastName"
                     Style="{StaticResource Style_Input}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Имя"
                   Target="Input_FirstName"
                   Style="{StaticResource Style_Label}"/>
            <TextBox x:Name="Input_FirstName"
                     Style="{StaticResource Style_Input}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Отчество"
                   Target="Input_Patronymic"
                   Style="{StaticResource Style_Label}"/>
            <TextBox x:Name="Input_Patronymic"
                     Style="{StaticResource Style_Input}"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <Label Content="Телефон"
                   Target="Input_Phone"
                   Style="{StaticResource Style_Label}"/>
            <TextBox x:Name="Input_Phone"
                     Style="{StaticResource Style_Input}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Email"
                   Target="Input_Email"
                   Style="{StaticResource Style_Label}"/>
            <TextBox x:Name="Input_Email"
                     Style="{StaticResource Style_Input}"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <Label Target="Input_Region"
                   Style="{StaticResource Style_Label}">
                <Label.Content>
                    <TextBlock Text="Регион(республика, край, область, округ)"
                               TextWrapping="WrapWithOverflow"/>
                </Label.Content>
            </Label>
            <TextBox x:Name="Input_Region"
                     Style="{StaticResource Style_Input}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Район"
                   Target="Input_District"
                   Style="{StaticResource Style_Label}"/>
            <TextBox x:Name="Input_District"
                     Style="{StaticResource Style_Input}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Населённый пункт"
                   Target="Input_Locality"
                   Style="{StaticResource Style_Label}"/>
            <TextBox x:Name="Input_Locality"
                     Style="{StaticResource Style_Input}"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <Label Content="Путь к файлу"
                   Target="Input_Path"
                   Style="{StaticResource Style_Label}"/>
            <TextBox x:Name="Input_Path"
                     Style="{StaticResource Style_Input}"/>
            <Button Content="Выбрать..."
                    Style="{StaticResource Style_ButtonPath}"
                    Click="ButtonPath_OnClick"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Content="Выгрузить"
                    Style="{StaticResource Style_ButtonSave}"
                    Click="ButtonSave_OnClick"/>
            <Button Content="Очистить"
                    Style="{StaticResource Style_ButtonClear}"
                    Click="ButtonClear_OnClick"/>
        </StackPanel>
    </StackPanel>
</Window>
