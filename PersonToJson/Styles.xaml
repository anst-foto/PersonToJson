<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Style_Default" TargetType="Control">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10"/>
    </Style>
        
    <Style x:Key="Style_Label" TargetType="Label" 
           BasedOn="{StaticResource Style_Default}">
        <Setter Property="Width" Value="225"/>
        <Setter Property="Foreground" Value="DarkBlue"/>
    </Style>
    <Style x:Key="Style_Input" TargetType="TextBox"
           BasedOn="{StaticResource Style_Default}">
        <Setter Property="Width" Value="400"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Foreground" Value="DarkBlue"/>
    </Style>
        
    <Style x:Key="Style_ButtonDefault" TargetType="Button"
           BasedOn="{StaticResource Style_Default}">
        <Setter Property="Width" Value="150"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    <Style x:Key="Style_ButtonClear" TargetType="Button"
           BasedOn="{StaticResource Style_ButtonDefault}">
        <Setter Property="Background" Value="DarkOrange"/>
    </Style>
    <Style x:Key="Style_ButtonSave" TargetType="Button"
           BasedOn="{StaticResource Style_ButtonDefault}">
        <Setter Property="Background" Value="DarkGreen"/>
    </Style>
    <Style x:Key="Style_ButtonLoad" TargetType="Button"
           BasedOn="{StaticResource Style_ButtonDefault}">
        <Setter Property="Background" Value="DarkViolet"/>
    </Style>
    <Style x:Key="Style_ButtonPath" TargetType="Button"
           BasedOn="{StaticResource Style_ButtonDefault}">
        <Setter Property="Background" Value="DarkBlue"/>
    </Style>
    
    <Style x:Key="Style_Box" TargetType="HeaderedContentControl">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="DarkSlateBlue"/>
    </Style>
</ResourceDictionary>